<!-- border_avatar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drawable cho đường viền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Màu và độ rộng của đường viền -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Drawable cho nền của ImageView -->
    <item android:drawable="@drawable/back_ground_relative" />
</layer-list>
