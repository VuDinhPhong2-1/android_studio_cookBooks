<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1E1E1E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dismis_btn"
            android:layout_width="9dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/close"
            app:tint="#C4C4C2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xoa_cook_book_btn"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="180dp"
            android:background="@drawable/back_stroke_rounded_corners"
            android:text="Xóa"
            android:textAllCaps="false"
            android:textColor="#C4C4C2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/luu_cook_book_btn"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/back_stroke_rounded_corners"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#C4C4C2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F0F0F"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/choose_image_food_btn"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#4A4A4A" />

                <ImageView
                    android:id="@+id/image_food_da_chon"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="#4A4A4A" />



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#242424"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ten_mon_an_ET"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#CCCCCC"
                    android:gravity="start"
                    android:hint="Tên món: Món canh bí ngon nhất"
                    android:paddingStart="20dp"
                    android:textColor="#FBF9F8"
                    android:textColorHint="#969696"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/mo_ta_mon_an_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#CCCCCC"
                    android:gravity="start"
                    android:hint="Hãy chia sẻ với mọi người về món này của bạn nhé. Ai hay điều gì đã truyền cảm hứng cho bạn nấu nó? Tại sao nó đặc biệt? Bạn thích thưởng thức nó theo cách nào?"
                    android:textColor="#FBF9F8"
                    android:textColorHint="#969696"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="Khẩu phần"
                        android:textColor="#E6E6E6"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/khau_phan_an_ET"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="125dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/txt_1"
                        android:hint="2"
                        android:textColor="#FBF9F8"
                        android:textColorHint="#969696" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:id="@+id/txt_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="Thời gian nấu"
                        android:textColor="#E6E6E6"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/thoi_gian_nau_ET"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/txt_2"
                        android:hint="1 tiếng 30 phút"
                        android:textColor="#FBF9F8"
                        android:textColorHint="#969696" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#242424"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Nguyên Liệu"
                    android:textColor="#E6E6E6"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/nguyen_lieu_layout_cha"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/them_nguyen_lieu_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/txt_3"
                        android:adjustViewBounds="true"
                        android:src="@drawable/plus"
                        app:tint="#F7F7F7" />

                    <TextView
                        android:id="@+id/txt_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:text="Nguyên liệu"
                        android:textColor="#F7F7F7"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#242424"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Cách làm"
                    android:textColor="#FBF9F8"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/nguyen_lieu_layout_cha_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/them_buoc_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/txt_4"
                        android:adjustViewBounds="true"
                        android:src="@drawable/plus"
                        app:tint="#F7F7F7" />

                    <TextView
                        android:id="@+id/txt_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:text="Nguyên liệu"
                        android:textColor="#F7F7F7"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
